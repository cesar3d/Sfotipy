@import "normalize.styl"

gris_oscuro = #333
gris_claro = #818181

a
	text-decoration none

body
	font-family 'Varela Round', sans-serif
	font-size 16px
	
.button-menu
	position absolute
	top 50%
	margin-top -10px
	left .5em

.border-bottom
	border-bottom 1px solid gris_claro

.container
	padding 1.4rem
	font-size 0
	text-align center
	
figure 
	margin 0 !important

.header
	height 3.5em

	.title
		font-size 1.1em
		text-align center
		margin 0
		line-height 3.5em

.menu 
	display none

.name
	color gris_oscuro
	
.author
	color gris_claro	

.relative
	position relative

.song
	width 8rem
	display inline-block
	font-size 1rem
	margin-right 1em	
	margin-bottom 1em
	text-align left
	
	&:nth-child(even)
		margin-right 0 
		
	p
		margin .5em 0	
		